<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:paddingTop="30dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="164dp">

        <EditText
            android:id="@+id/rmb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Input RMB"
            android:inputType="numberDecimal"
            android:shadowColor="#E91E63"
            android:textColor="#E91E63"
            android:textColorHighlight="#E91E63"
            android:textColorHint="#E91E63"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/showOut"
            android:layout_width="667dp"
            android:layout_height="48dp"
            android:layout_margin="3dp"
            android:gravity="center"
            android:text="Hello"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_dollar"
            android:layout_width="669dp"
            android:layout_height="37dp"
            android:layout_margin="3dp"
            android:background="#FF9800"
            android:gravity="center"
            android:onClick="onClick"
            android:text="DOLLAR"
            android:textSize="20sp" />


        <Button
            android:id="@+id/btn_euro"
            android:layout_width="667dp"
            android:layout_height="36dp"
            android:layout_margin="3dp"
            android:background="#FF9800"
            android:gravity="center"
            android:onClick="onClick"
            android:text="euro"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_won"
            android:layout_width="665dp"
            android:layout_height="32dp"
            android:layout_margin="3dp"
            android:background="#FF9800"
            android:gravity="center"
            android:onClick="onClick"
            android:text="WON"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_opencfg"
            android:layout_width="667dp"
            android:layout_height="32dp"
            android:layout_margin="3dp"
            android:background="#FF9800"
            android:gravity="center"
            android:onClick="openOne"
            android:text="config"
            android:textSize="20sp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>